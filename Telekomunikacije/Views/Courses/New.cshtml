@model Telekomunikacije.Models.Course
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Course</h2>

@using (Html.BeginForm("Create", "Courses"))
{
    <div class="form-group">
        @Html.LabelFor(c=>c.Name)
        @Html.TextBoxFor(c=>c.Name,new { @class= "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Password)
        @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.Year)
        @Html.TextBoxFor(c=>c.Year, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.ESPB)
        @Html.TextBoxFor(c=>c.ESPB, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Sacuvajte Kurs</button>

}